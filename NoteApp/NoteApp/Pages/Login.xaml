<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NoteApp.Pages.Login">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand">
            <Entry x:Name="email" Placeholder="Email"></Entry>
            <Entry x:Name="password" Placeholder="Password"></Entry>
            <Button Text="Login" Clicked="Button_Clicked"></Button>
            <Button Text="Forget Password" Clicked="Button_Clicked_1"></Button>
            <Button Text="Registration" Clicked="Button_Clicked_2"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>